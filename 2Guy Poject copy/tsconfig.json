{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src", "tests", "scripts", "server", "src/types/**/*.d.ts"]
}
